<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/connection_state_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="connection state" />

    <Button
        android:id="@+id/read_auth_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onReadAuthCounter"
        android:text="Read Auth Counter" />

    <CheckBox
        android:id="@+id/led_on_off_check_box"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:onClick="onLedOnOffClicked"
        android:text="Led On/Off" />

    <CheckBox
        android:id="@+id/main_power_on_off_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMainPowerOnOffClicked"
        android:text="Main Power On/Off" />

</LinearLayout>